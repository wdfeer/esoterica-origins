{
  "name": "Bewildering Song",
  "description": "Activate to inflict Weakness II for 30 seconds to other entities within 16 blocks every 2 minutes. If sneaking, apply Strength instead.",
  "type": "origins:active_self",
  "entity_action": {
    "type": "origins:if_else",
    "condition": {
      "type": "origins:sneaking"
    },
    "if_action": {
      "type": "origins:area_of_effect",
      "radius": 16,
      "bientity_action": {
        "type": "origins:target_action",
        "action": {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "minecraft:strength",
            "duration": 600,
            "amplifier": 0,
            "is_ambient": false,
            "show_particles": true,
            "show_icon": true
          }
        }
      }
    },
    "else_action": {
      "type": "origins:area_of_effect",
      "radius": 16,
      "bientity_action": {
        "type": "origins:target_action",
        "action": {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "minecraft:weakness",
            "duration": 600,
            "amplifier": 1,
            "is_ambient": false,
            "show_particles": true,
            "show_icon": true
          }
        }
      }
    }
  },
  "cooldown": 2400,
  "hud_render": {
    "should_render": true,
    "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
    "bar_index": 24
  }
}
