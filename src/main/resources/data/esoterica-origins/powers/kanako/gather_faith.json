  "type": "origins:action_over_time",
  "interval": 20,
  "entity_action": {
    "type": "origins:area_of_effect",
    "radius": 32,
    "bientity_action": {
      "type": "origins:actor_action",
      "action": {
        "type": "origins:chance",
        "action": {
          "type": "origins:change_resource",
          "resource": "esoterica-origins:kanako/faith",
          "change": 1
        },
        "chance": 0.04
      }
    },
    "bientity_condition": {
      "type": "origins:target_condition",
      "condition": {
        "type": "origins:living"
      }
    }
  }
}
