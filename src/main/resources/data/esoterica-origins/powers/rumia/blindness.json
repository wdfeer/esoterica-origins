{
  "name": "Short-sighted",
  "description": "Toggle applying Blindness to all entities within 16 blocks, including yourself.",
  "type": "origins:multiple",
  "toggle": {
    "type": "origins:toggle",
    "active_by_default": false
  },
  "blindness": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:area_of_effect",
      "radius": 16,
      "include_target": true,
      "bientity_action": {
        "type": "origins:target_action",
        "action": {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "minecraft:blindness",
            "duration": 40,
            "amplifier": 0,
            "is_ambient": true,
            "show_particles": false,
            "show_icon": true
          }
        }
      }
    },
    "condition": {
      "type": "origins:power_active",
      "power": "esoterica-origins:rumia/blindness_toggle"
    },
    "interval": 2
  }
}